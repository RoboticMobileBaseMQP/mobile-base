<?xml version="1.0"?>
<launch>
    <!-- convert xacro to urdf and place in param server-->
   	<param name="robot_description" command="$(find xacro)/xacro $(find mobile_base_description)/urdf/base/model.xacro" />

    <!-- start joint state publisher with gui-->
    <!-- <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" /> -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" output="screen" />

    <!-- state robot state publisher-->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="false" />
    </include>

    <!-- launch rviz-->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mobile_base_description)/rviz/mobile_base_config.rviz" />

</launch>